{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/movie.json",
  "name": "Movie",
  "description": "Schema for a movie document stored in the Firestore `items` collection.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "description": "Firestore document ID", "readOnly": true },
    "name": { "type": "string", "description": "Internal or display name" },
    "title": { "type": "string", "description": "Official movie title" },
    "year": { "type": "integer", "minimum": 1888, "maximum": 2100, "description": "Release year" },
    "actors": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true,
      "description": "Main cast members"
    },
    "genre": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "Genre tags (e.g., Drama, Thriller)"
    },
    "poster_link": { "type": "string", "format": "uri", "description": "Poster image URL" },
    "landscape_poster_link": { "type": "string", "format": "uri", "description": "Landscape poster image URL" },
    "createdAt": { "type": ["integer", "string"], "description": "ms since epoch or ISO string" },
    "updatedAt": { "type": ["integer", "string"], "description": "ms since epoch or ISO string" }
  },
  "required": ["title", "year"],
  "examples": [
    {
      "title": "The Lost Boys",
      "name": "The Lost Boys",
      "year": 1987,
      "actors": ["Jason Patric", "Corey Haim", "Dianne Wiest"],
      "genre": ["Comedy", "Horror"],
      "poster_link": "https://m.media-amazon.com/images/M/MV5B....jpg",
      "landscape_poster_link": "https://m.media-amazon.com/images/L/landscape....jpg"
    }
  ]
}
