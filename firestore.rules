rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Read-only access for signed-in users to UI-visible collections
    match /items/{id} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /movies/{id} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Allow a user to read (and optionally write) their own profile doc
    match /profiles/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      // If in future we want to allow editing own profile, switch write to same condition
      allow write: if false;
    }
  }
}
